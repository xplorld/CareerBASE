extends layout

block content-title
    h1 Edit Data of #{user}

block content
    script(src="/scripts/data-edit.js")
    h2 Public data
    table#public-data-edit-table.table.data-list
        thead
            tr
                th(scope='col') key
                th(scope='col') value
        tbody
            tr
                td Company of Interest
                td Google, Facebook, BitClave
            tr
                td Skills
                td JavaScript
            tr
                td Preferred Location
                td California
    button.btn.btn-outline-primary(type='button',onclick="add_line('#public-data-edit-table');") + Line

    hr

    h2 Private data
    table#private-data-edit-table.table.data-list
        thead
            tr
                th(scope='col') key
                th(scope='col') value
        tbody
            tr
                td Email
                td hao.jia@sv.cmu.edu
            tr
                td Phone Number
                td 6504776298
            tr
                td Current Employer
                td ...
    button.btn.btn-outline-primary(type='button',onclick="add_line('#private-data-edit-table');") + Line

    hr

    button#edit-cancel-button.btn.btn-secondary(type='button', style='margin:1px;') Cancel
    button#edit-submit-button.btn.btn-primary(type='button', style='margin:1px;') Submit
